<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Email</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script>
        function startTimer(duration, display) {
            var timer = duration, minutes, seconds;
            setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    timer = 0;
                    document.getElementById("resendOtpBtn").disabled = false;
                }
            }, 1000);
        }

        window.onload = function () {
            var countdown = 30; // 30 seconds countdown
            var display = document.querySelector('#time');
            startTimer(countdown, display);
        };

        function resendOtp() {
            document.getElementById("resendOtpBtn").disabled = true;
            var email = document.getElementById("email").value;
            fetch('/resendOtp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            })
            .then(response => response.text())
            .then(result => {
                alert(result);
                var countdown = 30; // Reset the countdown
                var display = document.querySelector('#time');
                startTimer(countdown, display);
            })
            .catch(error => {
                console.error('Error:', error);
                alert("Error resending OTP.");
            });
        }
    </script>
</head>
<body>
    <h1>Verify Your Email</h1>
    <form action="/listen/index/verifyEmailCaller" method="POST">
        <input type="hidden" id="email" name="email" value="<%= email %>">
        <input type="text" name="otp" placeholder="Enter OTP" required>
        <button type="submit">Verify</button>
    </form>
    <button id="resendOtpBtn" onclick="resendOtp()" disabled>Resend OTP</button>
    <p>Resend available in <span id="time">00:30</span> seconds</p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
