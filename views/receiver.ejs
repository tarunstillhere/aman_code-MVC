<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Receiver</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Create New Receiver</h1>
    <form action="/listen/index/submitRec" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" placeholder="small letters only" name="receiver[username]" required><br>

            <label for="email">Email:</label>
            <input type="email" id="email" placeholder="for eg - joe@gmail.com" name="receiver[email]" required><br>

        <label for="password">Password:</label>
        <input type="password" id="password" placeholder="Name@123" name="receiver[password]" required><br>

        <label for="country_code">Country Code:</label>
        <select name="receiver[countryCode]" id="country_code">
        </select>


        <label for="phoneNumber">Phone Number:</label>
        
        <input type="text" id="phoneNumber" placeholder="Valid Phone Number" name="receiver[phoneNumber]" required><br>

        <label for="gender">Gender:</label>
        <select id="gender" name="receiver[gender]">
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Others">Others</option>
        </select><br>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="receiver[dob]" required><br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="receiver[address]" required><br>

        <!-- // We are commenting IMAGE UPLOAD Option for testing... -->

        <!-- <label for="imgURL">Image URL:</label>
        <input type="file" id="imgURL" name="caller[imgURL]"<br> --> 

        <label for="language">Language:</label>
        <input type="text" id="language" name="receiver[language]"><br>

        <button type="submit">Create Receiver</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>

        let inp = document.getElementById("username");
        inp.addEventListener("input", (e) => {
            if (inp.value.charAt(inp.value.length - 1) >= 'A' && inp.value.charAt(inp.value.length - 1) <= 'Z') {
                inp.value = inp.value.toLowerCase();
            }
        })


        document.addEventListener("DOMContentLoaded", () => {
            (async () => {
                const selectDrop = document.querySelector("#country_code");

                try {
                    let response = await fetch(`https://restcountries.com/v3.1/all`);

                    if (!response.ok) {
                        throw new Error('Network response was not ok' + response.statusText);
                    }

                    let data = await response.json();
                    // console.log(data);

                    // Populate the select dropdown with country codes
                    data.forEach(country => {
                        let option = document.createElement('option');
                        option.value = country.idd.root + (country.idd.suffixes ? country.idd.suffixes[0] : '');
                        option.text = `${country.name.common} (${option.value})`;
                        selectDrop.appendChild(option);
                    });

                } catch (error) {
                    console.log(error);
                    console.error("Fetching failed");
                }
            })();
        });


    </script>
</body>
</html>